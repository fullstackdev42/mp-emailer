# Application configuration
APP_PORT=8080
APP_ENV=development
APP_DEBUG=true

# Application secret for session management
# In production, use a long, random string (at least 32 characters)
SESSION_SECRET=change_this_to_a_long_random_string_in_production
SESSION_NAME=mpe

# Database configuration
DB_ROOT_PASSWORD=strong_root_password_here
DB_NAME=mp_emailer_db
DB_USER=mp_emailer_user
DB_PASSWORD=strong_user_password_here
DB_HOST=db
DB_PORT=3306

# Logging configuration
LOG_LEVEL=info
LOG_FILE=mp-emailer.log

# JWT secret
JWT_EXPIRY=15
JWT_SECRET=your-jwt-secret

# Mail configuration (if you need to send emails)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain

MAILPIT_HOST=mailpit
MAILPIT_PORT=1025

MIGRATIONS_PATH=./migrations

# SMTP configuration (uncomment if needed)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_smtp_username
# SMTP_PASSWORD=your_smtp_password
