# Application secret for session management
# In production, use a long, random string (at least 32 characters)
SESSION_SECRET=change_this_to_a_long_random_string_in_production

# Database configuration
MARIADB_ROOT_PASSWORD=strong_root_password_here
MARIADB_DATABASE=mp_emailer_db
MARIADB_USER=mp_emailer_user
MARIADB_PASSWORD=strong_user_password_here

# Application configuration
APP_PORT=8080
APP_ENV=development

# Logging configuration
LOG_LEVEL=info
LOG_FILE=mp-emailer.log

# SMTP configuration (if you need to send emails)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
